# Use a imagem Alpine como base
FROM alpine:latest

# Instalar pacotes necess√°rios
RUN apk add --no-cache \
    docker \
    docker-cli \
    npm \
    docker-compose \
    openjdk11-jre-headless \
    python3 \
    py3-pip

# Instalar Jenkins
RUN apk add --no-cache jenkins

# Configurar Jenkins
COPY jenkins_config.xml /usr/share/jenkins/ref/config.xml
COPY init.groovy /usr/share/jenkins/ref/init.groovy.d/init.groovy

# Iniciar Jenkins
CMD ["jenkins"]
