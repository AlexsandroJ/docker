# Use a imagem oficial do Jenkins LTS
FROM jenkins/jenkins:lts-jdk11

# Defina o usuário root para instalar pacotes
USER root

# Atualize os pacotes e instale dependências
RUN apt-get update -qq && apt-get install -qqy \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg2 \
    software-properties-common

# Adicione a chave GPG do Docker
RUN curl -fsSL https://download.docker.com/linux/debian/gpg | apt-key add -

# Adicione o repositório do Docker
RUN add-apt-repository \
    "deb [arch=amd64] https://download.docker.com/linux/debian $(lsb_release -cs) stable"

# Instale o Docker
RUN apt-get update -qq && apt-get install -qqy \
    docker-ce \
    docker-ce-cli \
    containerd.io

# Baixe e instale o Docker Compose
RUN curl -L "https://github.com/docker/compose/releases/download/1.29.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && \
    chmod +x /usr/local/bin/docker-compose

# Torne o Jenkins o usuário padrão novamente
USER jenkins

# Exponha a porta padrão do Jenkins
EXPOSE 8080

# Comando para iniciar o Jenkins
ENTRYPOINT ["/sbin/tini", "--", "/usr/local/bin/jenkins.sh"]
