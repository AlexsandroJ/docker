# Use a imagem Alpine como base
FROM alpine:latest

# Instalar pacotes necess√°rios
RUN apk add --no-cache \
    docker \
    docker-cli \
    npm \
    docker-compose \
    openjdk17-jre-headless \
    python3 \
    py3-pip

# Instalar Jenkins
RUN apk add --no-cache jenkins

# Iniciar Jenkins
CMD ["rc-service jenkins start"]
